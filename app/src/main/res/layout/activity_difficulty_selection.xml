<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B3FFFFFF"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Difficulty Level"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginBottom="40dp"/>

        <Button
            android:id="@+id/btn_beginner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/pastel_green"
            android:text="Beginner"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:padding="12dp"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btn_intermediate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/pastel_yellow"
            android:text="Intermediate"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:padding="12dp"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btn_advanced"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/pastel_red"
            android:text="Advanced"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:padding="12dp"/>
    </LinearLayout>
</RelativeLayout>
